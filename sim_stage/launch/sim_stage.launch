<launch>
  <param name="/use_sim_time" value="true"/>

  <include file="$(find navigation_stage)/move_base_config/move_base.xml"/>

  <node name="map_server" pkg="map_server" type="map_server" args="$(find sim_stage)/world/red/red.yaml" respawn="false" />

  <node pkg="stage_ros" type="stageros" name="stageros" args="$(find sim_stage)/world/red/red.world" respawn="false" >
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>

  <include file="$(find navigation_stage)/move_base_config/amcl_node.xml"/>

  <arg name="rvizconfig" default="$(find sim_stage)/config/SETTING.rviz" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find sim_stage)/config/SETTING.rviz" />
</launch>